pipeline {
  agent any
  tools {
    nodejs "NodeJS 25"
  }
  stages {
    stage('Instalar dependencias') {
      steps {
        dir('cypress/mi-proyecto-cypress') {
          bat '''
          REM Instalando dependencias
          npm install
          '''
        }
      }
    }
    stage('Ejecutar pruebas específicas') {
      steps {
        dir('cypress/mi-proyecto-cypress') {
          bat '''
          REM Ejecutando pruebas específicas
          npx cypress run --spec "e2e/1-getting-started/PRUEBAS/login.cy.js"
          REM Para ejecutar múltiples tests:
          REM npx cypress run --spec "e2e/login.cy.js,e2e/submit.cy.js,e2e/code200.cy.js"
          '''
        }
      }
    }
  }
}