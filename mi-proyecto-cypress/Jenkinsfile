pipeline {
    agent any

    parameters {
        string(
            name: 'TEST_SPEC',
            defaultValue: 'cypress/e2e/**/*.cy.js',
            description: 'Ruta de los tests Cypress a ejecutar'
        )
    }

    environment {
        CYPRESS_CACHE_FOLDER = '.cache/Cypress'
    }

    stages {

        stage('Instalar dependencias') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Ejecutar tests Cypress') {
            steps {
                bat "npx cypress run --spec \"${params.TEST_SPEC}\""
            }
        }
    }

    post {
        always {

            // ðŸ“Œ Publicar resultados JUnit generados en mi-proyecto-cypress/results/
            junit 'mi-proyecto-cypress/results/*.xml'

            // ðŸ“Œ Guardar reportes JUnit como artefactos
            archiveArtifacts artifacts: 'mi-proyecto-cypress/results/*.xml', fingerprint: true

            // ðŸ“Œ Guardar videos generados por Cypress
            archiveArtifacts artifacts: 'mi-proyecto-cypress/cypress/report/videos/**/*.mp4', fingerprint: true

            // ðŸ“Œ Guardar screenshots generados por Cypress
            archiveArtifacts artifacts: 'mi-proyecto-cypress/cypress/report/screenshots/**/*.png', fingerprint: true

            // ðŸ“Œ Guardar reportes Mochawesome (HTML + JSON)
            archiveArtifacts artifacts: 'mi-proyecto-cypress/cypress/report/**/*.*', fingerprint: true
        }
    }
}
