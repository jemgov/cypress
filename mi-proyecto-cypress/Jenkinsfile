pipeline {
  agent any
  tools {
    nodejs "NodeJS 25"
  }
  parameters {
    string(name: 'TEST_SPEC', defaultValue: 'e2e/login.cy.js', description: 'Ruta del test a ejecutar')
  }
  stages {
    stage('Probar Cypress') {
      steps {
        timeout(time: 10, unit: 'MINUTES') {
          dir('mi-proyecto-cypress') {
            powershell """
            Write-Host '=== Ejecutando Cypress ==='
            npx cypress run --spec '${params.TEST_SPEC}'
            Write-Host '=== Cypress finalizado ==='
            """
          }
        }
      }
    }
  }
}
