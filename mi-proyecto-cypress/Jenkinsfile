pipeline {
    agent any

    stages {

        stage('Instalar dependencias') {
            steps {
                dir('mi-proyecto-cypress') {
                    powershell '''
                        npm ci
                    '''
                }
            }
        }

        stage('Ejecutar Cypress') {
            steps {
                dir('mi-proyecto-cypress') {
                    powershell '''
                        npx cypress run
                    '''
                }
            }
        }

        stage('Fusionar JSONs Mochawesome') {
            steps {
                dir('mi-proyecto-cypress') {
                    powershell '''
                        echo "Fusionando JSONs..."
                        npx mochawesome-merge cypress/report/.jsons/*.json -o cypress/report/mochawesome.json
                    '''
                }
            }
        }

        stage('Generar HTML Mochawesome') {
            steps {
                dir('mi-proyecto-cypress') {
                    powershell '''
                        echo "Generando HTML con marge..."
                        npx marge cypress/report/mochawesome.json --reportDir cypress/report/html --reportFilename mochawesome.html --inline --overwrite
                    '''
                }
            }
        }

        stage('Diagn√≥stico artefactos') {
            steps {
                dir('mi-proyecto-cypress') {
                    powershell '''
                        echo "=== Contenido de cypress/results ==="
                        dir cypress/results

                        echo "=== Contenido de cypress/report/.jsons ==="
                        dir cypress/report/.jsons

                        echo "=== Contenido de cypress/report ==="
                        dir cypress/report

                        echo "=== Contenido de cypress/report/html ==="
                        dir cypress/report/html
                    '''
                }
            }
        }

        stage('Publicar reporte HTML') {
            steps {
                publishHTML(target: [
                    reportName: 'Reporte Cypress (Mochawesome)',
                    reportDir: 'mi-proyecto-cypress/cypress/report/html',
                    reportFiles: 'mochawesome.html',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
            }
        }

    }

    post {
        always {
            junit 'mi-proyecto-cypress/cypress/results/*.xml'
        }
    }
}
