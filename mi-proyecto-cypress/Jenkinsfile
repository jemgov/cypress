pipeline {
    agent any

    parameters {
        string(
            name: 'TEST_SPEC',
            defaultValue: 'cypress/e2e/1-getting-started/*.cy.js',
            description: 'Ruta de los tests Cypress a ejecutar'
        )
    }

    environment {
        CYPRESS_CACHE_FOLDER = '.cache/Cypress'
    }

    stages {

        stage('Verificar instalación Cypress') {
            steps {
                bat 'npx cypress verify'
            }
        }

        stage('Instalar dependencias') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Mostrar patrón TEST_SPEC') {
            steps {
                bat "echo TEST_SPEC = ${params.TEST_SPEC}"
            }
        }

        stage('Ejecutar tests Cypress') {
            steps {
                bat "npx cypress run --spec \"${params.TEST_SPEC}\""
            }
        }
    }

    post {
        always {

            // Publicar resultados JUnit generados en results/
            junit 'results/*.xml'

            // Guardar reportes JUnit como artefactos
            archiveArtifacts artifacts: 'results/*.xml', fingerprint: true

            // Guardar videos generados por Cypress
            archiveArtifacts artifacts: 'cypress/report/videos/**/*.mp4', fingerprint: true

            // Guardar screenshots generados por Cypress
            archiveArtifacts artifacts: 'cypress/report/screenshots/**/*.png', fingerprint: true

            // Guardar reportes Mochawesome (HTML + JSON)
            archiveArtifacts artifacts: 'cypress/report/**/*.*', fingerprint: true
        }
    }
}
