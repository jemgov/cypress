pipeline {
    agent any

    parameters {
        string(
            name: 'TEST_SPEC',
            defaultValue: 'e2e/1-getting-started/PRUEBAS/*.cy.js',
            description: 'Ruta de los tests Cypress a ejecutar'
        )
    }

    environment {
        CYPRESS_CACHE_FOLDER = '.cache/Cypress'
    }

    stages {

        stage('Instalar dependencias') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Ejecutar tests Cypress') {
            steps {
                sh 'npx cypress run --spec "$TEST_SPEC"'
            }
        }
    }

    post {
        always {

            // ðŸ“Œ Publicar resultados JUnit (generados por tu plugin en cypress.config.js)
            junit 'results/*.xml'

            // ðŸ“Œ Guardar reportes JUnit como artefactos
            archiveArtifacts artifacts: 'results/*.xml', fingerprint: true

            // ðŸ“Œ Guardar videos generados por Cypress
            archiveArtifacts artifacts: 'cypress/report/videos/**/*.mp4', fingerprint: true

            // ðŸ“Œ Guardar screenshots generados por Cypress
            archiveArtifacts artifacts: 'cypress/report/screenshots/**/*.png', fingerprint: true

            // ðŸ“Œ Guardar reportes Mochawesome (HTML + JSON)
            archiveArtifacts artifacts: 'cypress/report/**/*.*', fingerprint: true
        }
    }
}
