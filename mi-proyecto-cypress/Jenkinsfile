pipeline {
  agent any

  parameters {
    string(
      name: 'TEST_SPEC',
      defaultValue: 'cypress/e2e/**/*.cy.js',
      description: 'Ruta del test a ejecutar'
    )
  }

  tools {
    nodejs 'NodeJS 25'
  }

  environment {
    CYPRESS_CACHE_FOLDER = "${WORKSPACE}/.cache"
  }

  stages {

    stage('Instalar dependencias') {
      steps {
        dir('mi-proyecto-cypress') {
          powershell '''
            echo "=== Instalando dependencias ==="
            npm install

            echo "=== Instalando binario de Cypress ==="
            npx cypress install

            echo "=== Instalación completada ==="
          '''
        }
      }
    }

    stage('Ejecutar pruebas Cypress') {
      steps {
        dir('mi-proyecto-cypress') {
          powershell '''
            echo "=== Ejecutando pruebas Cypress ==="
            npx cypress run --spec "$env:TEST_SPEC"
            echo "=== Cypress finalizado ==="
          '''
        }
      }
    }

    stage('Generar reporte Mochawesome HTML') {
      steps {
        dir('mi-proyecto-cypress') {
          powershell '''
            echo "=== Fusionando JSON de Mochawesome ==="

            # Fusionar todos los JSON generados por Cypress
            npx mochawesome-merge cypress/report/*.json -o cypress/report/mochawesome.json

            echo "=== Generando HTML final ==="
            npx marge cypress/report/mochawesome.json --reportDir cypress/report/html
          '''
        }
      }
    }
  }

  post {
    always {

      # Archivar artefactos (JSON, HTML, vídeos, screenshots)
      archiveArtifacts artifacts: 'mi-proyecto-cypress/cypress/report/**/*.*', allowEmptyArchive: true

      # Publicar el reporte HTML Mochawesome
      publishHTML([
        reportDir: 'mi-proyecto-cypress/cypress/report/html',
        reportFiles: 'mochawesome.html',
        reportName: 'Reporte Cypress (Mochawesome)',
        allowMissing: false,
        keepAll: true,
        alwaysLinkToLastBuild: true
      ])

      # Publicar XML JUnit para estadísticas de Jenkins
      junit 'mi-proyecto-cypress/cypress/results/*.xml'
    }
  }
}
